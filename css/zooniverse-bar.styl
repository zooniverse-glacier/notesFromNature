}
.zooniverse-bar form.zooniverse-sign-in {
border-top: 1px solid rgba(211, 211, 211, 0.25);
padding: 15px 0;
}
.zooniverse-bar form.zooniverse-sign-in > div {
padding: 3px 15px;
}
.zooniverse-bar form.zooniverse-sign-in > div > label {
display: inline-block;
position: relative;
white-space: nowrap;
}
.zooniverse-bar form.zooniverse-sign-in > div > label > input {
-moz-box-sizing: border-box;
box-sizing: args;
background: rgba(211, 211, 211, 0.2);
border: 1px solid rgba(211, 211, 211, 0.2);
box-shadow: 0 0 5px -1px rgba(0, 0, 0, 0.75) inset;
color: inherit;
font-family: inherit;
letter-spacing: inherit;
margin: 0;
padding: 6px 5px 3px;
width: 210px;
}

.zooniverse-bar form.zooniverse-sign-in > div > label > input + .placeholder {
opacity: 0.75;
position: absolute;
left: 0;
margin: 7px 5px 0;
top: 0;
}

.zooniverse-bar form.zooniverse-sign-in > div > label > input:focus + .placeholder, .zooniverse-bar form.zooniverse-sign-in > div > label > input.full + .placeholder {
display: none;
}

.zooniverse-bar form.zooniverse-sign-in > div.zooniverse-action {
text-align: right;
}

.zooniverse-bar form.zooniverse-sign-in > div.zooniverse-action > a {
letter-spacing: normal;
opacity: 0.8;
text-transform: none;
}

.zooniverse-bar form.zooniverse-sign-in > div.zooniverse-action > button {
background-color: transparent;
background-image: -moz-linear-gradient(top, rgba(211, 211, 211, 0.25), transparent);
background-image: -webkit-linear-gradient(top, rgba(211, 211, 211, 0.25), transparent);
background-image: linear-gradient(top, rgba(211, 211, 211, 0.25), transparent);
border: 1px solid rgba(211, 211, 211, 0.25);
color: inherit;
cursor: pointer;
font-family: inherit;
font-size: inherit;
letter-spacing: inherit;
margin-left: 10px;
padding: 6px 15px 3px;
text-transform: inherit;
}
