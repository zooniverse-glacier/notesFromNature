.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content.zooniverse-menu > .zooniverse-menu-item.zooniverse-accordion > .zooniverse-accordion-content.zooniverse-menu {
margin: 0;
padding: 0;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content.zooniverse-menu > .zooniverse-menu-item.zooniverse-accordion > .zooniverse-accordion-content.zooniverse-menu > .zooniverse-menu-item {
border-top: 1px solid rgba(211, 211, 211, 0.25);
display: block;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content.zooniverse-menu > .zooniverse-menu-item.zooniverse-accordion > .zooniverse-accordion-content.zooniverse-menu > .zooniverse-menu-item.zooniverse-link > a {
display: block;
padding: 6px 20px 3px;
white-space: nowrap;
}
.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content.zooniverse-menu > .zooniverse-menu-item.zooniverse-accordion > .zooniverse-accordion-content.zooniverse-menu > .zooniverse-menu-item.zooniverse-link > a:hover {
