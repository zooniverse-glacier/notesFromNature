.zooniverse-bar {
  background: rgba(0, 0, 0, 0.75);
  border-bottom: 1px solid rgba(211, 211, 211, 0.25);
  color: #d3d3d3;
  float: left;
  font: 12px Titillium, "Helvetica Neue", sans-serif;
  letter-spacing: 1px;
  left: 0;
  position: absolute;
  text-transform: uppercase;
  top: 0;
  width: 100%;
  z-index: 100;
}

.zooniverse-bar a {
color: inherit;
text-decoration: none;
}

.zooniverse-bar a:hover {
color: white;
}

.zooniverse-bar > .zooniverse-menu {
margin: 0;
padding: 0;
}

.zooniverse-bar > .zooniverse-menu.leading {
float: left;
margin-left: 30px;
}
.zooniverse-bar > .zooniverse-menu.leading > .zooniverse-menu-item {
border-right: 1px solid rgba(211, 211, 211, 0.25);
}

.zooniverse-bar > .zooniverse-menu.leading > .zooniverse-menu-item > .zooniverse-dropdown-content {
left: -1px;
}

.zooniverse-bar > .zooniverse-menu.trailing {
float: right;
margin-right: 30px;
}

.zooniverse-bar > .zooniverse-menu.trailing > .zooniverse-menu-item {
border-left: 1px solid rgba(211, 211, 211, 0.25);
}

.zooniverse-bar > .zooniverse-menu.trailing > .zooniverse-menu-item > .zooniverse-dropdown-content {
right: -1px;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item {
border-top: 0;
cursor: default;
display: block;
float: left;
position: relative;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > a, .zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-heading {
display: inline-block;
padding: 6px 20px 3px;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-heading:after {
font-size: 8px;
margin-left: 2px;
opacity: 0.67;
vertical-align: 0;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content {
background: rgba(0, 0, 0, 0.75);
border: 1px solid rgba(211, 211, 211, 0.25);
border-top: 0;
position: absolute;
top: 100%;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content:after {
content: " ";
height: 100px;
left: 0;
position: absolute;
top: 100%;
width: 100%;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content.zooniverse-menu {
margin: 0;
padding: 0;
}

.zooniverse-bar > .zooniverse-menu > .zooniverse-menu-item > .zooniverse-dropdown-content.zooniverse-menu > .zooniverse-menu-item {
border-top: 1px solid rgba(211, 211, 211, 0.25);
